<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/exclusion">
            <TextView
                android:id="@+id/srcName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="HOWRAH JN - "
                android:layout_marginLeft="15dp"
                android:textAlignment="center"
                android:textColor="@color/primaryTextColor"
                android:autoSizeTextType="uniform"
                android:autoSizePresetSizes="@array/autosize_text_sizes"/>
            <TextView
                android:id="@+id/source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="HWH"
                android:layout_toEndOf="@+id/srcName"
                android:textAlignment="center"
                android:textColor="@color/primaryTextColor"
                android:autoSizeTextType="uniform"
                android:autoSizePresetSizes="@array/autosize_text_sizes" />
            <TextView
                android:id="@+id/destName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="KHARAGPUR JN - "
                android:textAlignment="center"
                android:layout_marginLeft="20dp"
                android:layout_toStartOf="@+id/destination"
                android:textColor="@color/primaryTextColor"
                android:autoSizeTextType="uniform"
                android:autoSizePresetSizes="@array/autosize_text_sizes"/>

            <TextView
                android:id="@+id/destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:text="KGP"
                android:textAlignment="center"
                android:textColor="@color/primaryTextColor"
                android:autoSizeTextType="uniform"
                android:autoSizePresetSizes="@array/autosize_text_sizes" />

            <TextView
                android:id="@+id/srcTime"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/source"
                android:layout_marginLeft="30dp"
                android:text="10:25 HRS"
                android:textAlignment="center"
                android:textColor="@color/primaryTextColor"
                android:autoSizeTextType="uniform"
                android:autoSizePresetSizes="@array/autosize_text_sizes" />

            <TextView
                android:id="@+id/destTime"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/destination"
                android:layout_marginRight="30dp"
                android:text="14:25 HRS"
                android:textAlignment="center"
                android:textColor="@color/primaryTextColor"
                android:autoSizeTextType="uniform"
                android:autoSizePresetSizes="@array/autosize_text_sizes" />

            <TextView
                android:id="@+id/destDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/destTime"
                android:layout_marginRight="50dp"
                android:text="21-04-2018"
                android:textAlignment="center"
                android:textColor="@color/primaryTextColor"
                android:autoSizeTextType="uniform"
                android:autoSizePresetSizes="@array/autosize_text_sizes"/>

            <TextView
                android:id="@+id/sourceDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/srcTime"
                android:layout_marginLeft="60dp"
                android:text="21-04-2018"
                android:textAlignment="center"
                android:textColor="@color/primaryTextColor"
                android:autoSizeTextType="uniform"
                android:autoSizePresetSizes="@array/autosize_text_sizes"/>

            <TextView
                android:id="@+id/trainName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/sourceDate"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:text="Train Name: HWH KGP Local"
                android:textAlignment="center"
                android:textColor="@color/primaryTextColor"
                android:autoSizeTextType="uniform"
                android:autoSizePresetSizes="@array/autosize_text_sizes"/>

            <TextView
                android:id="@+id/trainNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/trainName"
                android:layout_marginLeft="10dp"
                android:text="Train No: 51245"
                android:textAlignment="center"
                android:textColor="@color/primaryTextColor"
                android:layout_marginBottom="10dp"
                android:autoSizeTextType="uniform"
                android:autoSizePresetSizes="@array/autosize_text_sizes"/>


        </RelativeLayout>



</RelativeLayout>