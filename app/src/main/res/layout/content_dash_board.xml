<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.DashBoardActivity"
    tools:showIn="@layout/app_bar_dash_board">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/searchActivity"
        android:layout_width="142dp"
        android:layout_height="157dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/ripple_effect"
        android:foreground="@drawable/btn_search"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/trainLocation"
        android:layout_width="142dp"
        android:layout_height="157dp"
        android:layout_marginTop="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ripple_effect"
        android:foreground="@drawable/train_location" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/myLocation"
        android:layout_width="142dp"
        android:layout_height="157dp"
        android:layout_below="@+id/searchActivity"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ripple_effect"
        android:foreground="@drawable/my_location" />

</RelativeLayout>