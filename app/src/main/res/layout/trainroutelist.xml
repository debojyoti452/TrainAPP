<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
<RelativeLayout
    android:id="@+id/trainRouteLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/nextLocationMarker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nextlocation"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"/>
    <TextView
        android:id="@+id/stationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sealdah -"
        android:autoSizeTextType="uniform"
        android:autoSizePresetSizes="@array/autosize_text_sizes"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/nextLocationMarker"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/stationCode"
        android:layout_toEndOf="@+id/stationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SDAH"
        android:layout_marginLeft="5dp"
        android:autoSizeTextType="uniform"
        android:autoSizePresetSizes="@array/autosize_text_sizes"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"/>
</RelativeLayout>
</RelativeLayout>